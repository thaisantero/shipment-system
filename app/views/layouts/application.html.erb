<!DOCTYPE html>
<html>
  <head>
    <title>ShipmentSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <h1><%= link_to 'Freetar', root_path%></h1>
      <nav>
        <%= link_to 'Modelos de Transporte', transport_models_path %> |
        <%= link_to 'Veículos', vehicles_path %> |
        <%= link_to 'Ordens de Serviço', service_orders_path %> |
        <% if user_signed_in? %>
          <%= current_user.name%> | <%= current_user.email %> | <%= I18n.t(current_user.role) %> 
          <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
          <% if current_page?(vehicles_path) %>
            <%= form_with(url: search_vehicles_path, method: :get) do | f |%>
              <%= f.label :query,  'Buscar Veículo' %>
              <%= f.text_field :query %>
              <%= f.submit 'Buscar' %>
            <% end %> 
          <% end %>
        <% else %>
          <%= link_to 'Entrar', new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <main>
      <div>
        <%= alert %>
        <%= notice %>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
